/*  # HEADER #	Script: 		Client\Functions\Client_GetClosestCamp.sqf	Alias:			CTI_CL_FNC_OnCampCaptured	Description:	Return the closest depot of the given entitie.	Author: 		Benny (ported from arma2 WFBE by Sari)	Creation Date:	10-01-2014	Revision Date:	18-01-2015	  # PARAMETERS #    0	[Array]: The callers position    1	[Array]: Range to search    2	[Boolean]: Ignore side check	  # RETURNED VALUE #	[closest] The closest camp	  # SYNTAX #	 [vehicle player, range, true] Call CTI_CL_FNC_GetClosestCamp	   # DEPENDENCIES #	Common Function: CTI_CO_FNC_GetSideID*/Private ["_closest","_near","_pos","_range"];_closest = objNull;_pos = _this select 0;_range = _this select 1;_ignore_side = if (count _this > 2) then {_this select 2} else {false};_side = side player;_near = _pos nearEntities [CTI_Logic_Camp, _range];{	if !(isNil {_x getVariable "cti_camp_sideID"}) then {		if (alive(_x getVariable "CTI_CO_CAMP_BUNKER")) then {			if (_ignore_side) then {				_closest = _x;			} else {				if ((_x getVariable "cti_camp_sideID") == (_side Call CTI_CO_FNC_GetSideID)) then {_closest = _x;};			};		};	};} forEach _near;_closest