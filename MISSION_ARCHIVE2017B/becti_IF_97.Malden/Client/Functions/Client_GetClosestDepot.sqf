/*  # HEADER #	Script: 		Client\Functions\Client_GetClosestDepot.sqf	Alias:			CTI_CL_FNC_GetClosestDepot	Description:	Return the closest depot of the given entitie.	Author: 		Benny (ported from arma2 WFBE by Sari)	Creation Date:	10-01-2014	Revision Date:	12-01-2014	  # PARAMETERS #    0	[Array]: The callers position    1	[Array]: Range to search	  # RETURNED VALUE #	[closest] The closest Depot	  # SYNTAX #	 [vehicle player, range] Call CTI_CL_FNC_GetClosestDepot	   # DEPENDENCIES #	Common Function: CTI_CO_FNC_GetSideID*/Private ["_closest","_near","_pos","_range"];_closest = objNull;_pos = _this select 0;_range = _this select 1;_side = side player;_near = _pos nearEntities [CTI_Logic_Depot, _range];{	if !(isNil {_x getVariable "cti_town_sideID"}) then {		if ((_x getVariable "cti_town_sideID") == (_side Call CTI_CO_FNC_GetSideID) && !(_x getVariable "cti_town_inactive")) then {_closest = _x};	};} forEach _near;_closest